<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/celeste"
    tools:context="com.example.tp.inside.IniciarSesionActivity">


    <include android:id="@+id/toolbar"
        layout="@layout/primary_toolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30sp"
                android:paddingEnd="30sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="LUNES"
                android:gravity="center"
                android:background="#CCCC00"
                android:layout_marginTop="25dp"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nublado 18C. Mas informacion:"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVerMasLunes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Ver más" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30sp"
                android:paddingEnd="30sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="MARTES"
                android:gravity="center"
                android:background="#CCCC00"
                android:layout_marginTop="25dp"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nublado 15C. Mas informacion:"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVerMasMartes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Ver más" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30sp"
                android:paddingEnd="30sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="MIERCOLES"
                android:gravity="center"
                android:background="#CCCC00"
                android:layout_marginTop="25dp"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tvClima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soleado 21C. Mas informacion:"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVerMasMiercoles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Ver más" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30sp"
                android:paddingEnd="30sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="JUEVES"
                android:gravity="center"
                android:background="#CCCC00"
                android:layout_marginTop="25dp"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soleado 23C. Mas informacion:"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVerMasJueves"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Ver más" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30sp"
                android:paddingEnd="30sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="VIERNES"
                android:gravity="center"
                android:background="#CCCC00"
                android:layout_marginTop="25dp"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semi nublado 17C. Mas informacion:"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVerMasViernes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Ver más" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30sp"
                android:paddingEnd="30sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="SABADO"
                android:gravity="center"
                android:background="#CCCC00"
                android:layout_marginTop="25dp"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tormenta electrica 10C. Mas informacion:"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVerMasSabado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Ver más" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30sp"
                android:paddingEnd="30sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="DOMINGO"
                android:gravity="center"
                android:background="#CCCC00"
                android:layout_marginTop="25dp"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nublado 18C. Mas informacion:"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVerMasDomingo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Ver más" />
            </LinearLayout>


            <Button
                android:id="@+id/idBtnSalir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="CERRAR SESION"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
